<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
/* Reset and Base Layout */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: 'Poppins', sans-serif;
}

body {
  background-color: #f4f7fc;
  color: #800000;
  font-size: 1rem;
  line-height: 1.6;
}

/* Navbar Styling */
.navbar {
  background-color: #800000;
  color: white;
  padding: 1rem 2rem;
  box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
  position: sticky;
  top: 0;
  z-index: 1000;
}

.navbar-brand {
  font-size: 1.8rem;
  font-weight: 700;
  letter-spacing: 0.5px;
}

.navbar-nav {
  display: flex;
  margin-left: auto;
}

.navbar-nav .nav-item {
  margin-left: 1.5rem;
}

.navbar-nav .nav-link {
  color: white;
  text-decoration: none;
  font-size: 1.05rem;
  transition: color 0.3s ease-in-out;
}

.navbar-nav .nav-link:hover {
  color: #ffd700;
}

/* Main Container */
.container {
  margin-top: 90px;
  padding: 20px;
}

/* Section Titles */
h2 {
  font-size: 2.2rem;
  margin-bottom: 1.2rem;
  color: #800000;
  font-weight: bold;
  text-align: center;
}

/* Form Container */
.form-container {
  background-color: #ffffff;
  padding: 2rem;
  border-radius: 12px;
  box-shadow: 0 6px 20px rgba(0, 0, 0, 0.05);
  margin-bottom: 2rem;
}

.form-group {
  margin-bottom: 1.5rem;
}

.form-group label {
  font-size: 1.1rem;
  color: #800000;
  font-weight: 600;
}

.form-group input,
.form-group select,
.form-group button {
  width: 100%;
  padding: 0.75rem;
  font-size: 1rem;
  border-radius: 8px;
  border: 1px solid #ccc;
  margin-top: 0.5rem;
}

.form-group button {
  background-color: #800000;
  color: white;
  font-weight: bold;
  border: none;
  transition: all 0.3s ease-in-out;
}

.form-group button:hover {
  background-color: #660000;
}

/* Table Styling */
.table-responsive {
  overflow-x: auto;
  margin-top: 2rem;
}

.table-responsive table {
  width: 100%;
  border-collapse: collapse;
  background-color: #fff;
  border-radius: 10px;
  overflow: hidden;
}

table th, table td {
  padding: 14px 18px;
  font-size: 1rem;
  border-bottom: 1px solid #dee2e6;
}

table th {
  background-color: #800000;
  color: #fff;
  text-transform: uppercase;
}

table td {
  color: #333;
}

tr:hover {
  background-color: #f8e5e5;
}

/* Logout Button */
.logout {
  display: inline-block;
  background-color: #800000;
  color: white;
  font-size: 1.1rem;
  font-weight: 600;
  text-align: center;
  padding: 0.75rem 1.5rem;
  text-decoration: none;
  border-radius: 8px;
  transition: all 0.3s ease;
}

.logout:hover {
  background-color: #660000;
  transform: translateY(-3px);
}

.logout:active {
  transform: translateY(1px);
}

/* Responsive Styles */
@media (max-width: 768px) {
  .navbar {
    padding: 1rem;
    flex-direction: column;
  }

  .navbar-nav {
    flex-direction: column;
    margin-top: 1rem;
    align-items: center;
  }

  .navbar-nav .nav-item {
    margin-left: 0;
    margin-top: 0.8rem;
  }

  .container {
    margin-top: 30px;
    padding: 10px;
  }

  table {
    font-size: 0.95rem;
  }

  .form-container {
    padding: 1.5rem;
  }

  button {
    width: 100%;
  }
}
</style>

</head>
<body>

<!-- Sidebar -->
<div class="sidebar">
  <h3>Admin Dashboard</h3>
  <a href="#users">Users</a>
  <a href="#companies">Companies</a>
  <a href="#jobs">Jobs</a>
  <a href="/logout">Logout</a>
</div>

<!-- Main Content -->
<div class="content">
  <!-- Users Section -->
  <section id="users">
      <h2>Manage Users</h2>
      <div class="table-responsive">
          <table class="table table-bordered">
              <thead>
                  <tr>
                      <th>Name</th>
                      <th>Email</th>
                      <th>Role</th>
                      <th>Actions</th>
                  </tr>
              </thead>
              <tbody>
                  <% users.forEach(user => { %>
                      <tr>
                          <td><%= user.name %></td>
                          <td><%= user.email %></td>
                          <td>
                              <form action="/admin/users/<%= user.id %>/edit" method="POST">
                                  <select name="role" onchange="this.form.submit()" class="form-select form-select-sm">
                                      <option value="JobSeeker" <%= user.role === 'JobSeeker' ? 'selected' : '' %>>JobSeeker</option>
                                      <option value="Employer" <%= user.role === 'Employer' ? 'selected' : '' %>>Employer</option>
                                      <option value="Admin" <%= user.role === 'Admin' ? 'selected' : '' %>>Admin</option>
                                  </select>
                              </form>
                          </td>
                          <td>
                              <form action="/admin/users/<%= user.id %>/delete" method="POST">
                                  <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                              </form>
                          </td>
                      </tr>
                  <% }) %>
              </tbody>
          </table>
      </div>
  </section>

  <!-- Companies Section -->
  <section id="companies" class="mt-5">
      <h2>Manage Companies</h2>
      <div class="table-responsive">
          <table class="table table-bordered">
              <thead>
                  <tr>
                      <th>Company Name</th>
                      <th>Address</th>
                      <th>Contact Info</th>
                      <th>Actions</th>
                  </tr>
              </thead>
              <tbody>
                  <% companies.forEach(company => { %>
                      <tr>
                          <td><%= company.companyName %></td>
                          <td><%= company.address %></td>
                          <td><%= company.contactInfo %></td>
                          <td>
                              <form action="/admin/companies/<%= company.companyId %>/delete" method="POST">
                                  <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                              </form>
                          </td>
                      </tr>
                  <% }) %>
              </tbody>
          </table>
      </div>
  </section>

  <!-- Jobs Section -->
  <section id="jobs" class="mt-5">
      <h2>Manage Jobs</h2>
      <div class="table-responsive">
          <table class="table table-bordered">
              <thead>
                  <tr>
                      <th>Job Title</th>
                      <th>Company</th>
                      <th>Location</th>
                      <th>Actions</th>
                  </tr>
              </thead>
              <tbody>
                  <% jobs.forEach(job => { %>
                      <tr>
                          <td><%= job.jobTitle %></td>
                          <td><%= job.Company.companyName %></td>
                          <td><%= job.location %></td>
                          <td>
                              <form action="/admin/jobs/<%= job.id %>/delete" method="POST">
                                  <button class="btn btn-danger btn-sm" type="submit">Delete</button>
                              </form>
                          </td>
                      </tr>
                  <% }) %>
              </tbody>
          </table>
      </div>
  </section>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
